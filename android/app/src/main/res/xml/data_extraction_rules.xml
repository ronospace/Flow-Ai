<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all data by default -->
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
        
        <!-- Then exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="flutter.prefs"/>
        <exclude domain="database" path="app_database.db"/>
        <exclude domain="database" path="app_database.db-shm"/>
        <exclude domain="database" path="app_database.db-wal"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all files by default -->
        <include domain="file" path="."/>
        
        <!-- Then exclude cache -->
        <exclude domain="file" path="cache/"/>
    </device-transfer>
</data-extraction-rules>
